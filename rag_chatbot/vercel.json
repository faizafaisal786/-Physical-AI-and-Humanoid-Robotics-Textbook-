{
  "version": 2,
  "builds": [
    {
      "src": "docusaurus_textbook/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/docusaurus_textbook/$1"
    }
  ],
  "buildCommand": "cd docusaurus_textbook && npm install && npm run build",
  "outputDirectory": "docusaurus_textbook/build",
  "installCommand": "cd docusaurus_textbook && npm install",
  "env": {
    "COHERE_API_KEY": "@cohere_api_key",
    "QDRANT_URL": "@qdrant_url",
    "QDRANT_API_KEY": "@qdrant_api_key"
  }
}
